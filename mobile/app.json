{
  "expo": {
    "name": "Walletly",
    "slug": "Walletly",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/wallet.png",
    "scheme": "mobile",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/wallet.png",
      "resizeMode": "contain",
      "backgroundColor": "#1e1e1e"
    },
    "notification": {
      "icon": "./assets/images/wallet.png",
      "color": "#2563EB"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.yourcompany.yourapp",
      "infoPlist": {
        "NSUserTrackingUsageDescription": "This identifier will be used to send you reminders.",
        "UIBackgroundModes": [
          "fetch",
          "remote-notification"
        ]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/wallet.png",
        "backgroundColor": "#1e1e1e"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.anonymous.Walletly"
    },
    "plugins": [
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/wallet.png",
          "resizeMode": "contain",
          "backgroundColor": "#1e1e1e",
          "userInterfaceStyle": "automatic",
          "statusBar": {
            "translucent": true,
            "style": "light",
            "backgroundColor": "#1e1e1e"
          }
        }
      ],
      [
        "expo-sqlite",
        {
          "enableFTS": true,
          "useSQLCipher": true,
          "android": {
            // Override the shared configuration for Android
            "enableFTS": false,
            "useSQLCipher": false
          },
          "ios": {
            // You can also override the shared configurations for iOS
            "customBuildFlags": [
              "-DSQLITE_ENABLE_DBSTAT_VTAB=1 -DSQLITE_ENABLE_SNAPSHOT=1"
            ]
          }
        }
      ],
      "expo-router"
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
{
  "expo": {
    "name": "My Money",
    "slug": "MyMoneyWallet",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/wallet.png",
    "scheme": "mobile",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/wallet.png",
      "resizeMode": "contain",
      "backgroundColor": "#1e1e1e"
    },
    "notification": {
      "icon": "./assets/images/wallet.png",
      "color": "#2563EB" // optional accent color
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.yourcompany.yourapp",
      "infoPlist": {
        "NSUserTrackingUsageDescription": "This identifier will be used to send you reminders.",
        "UIBackgroundModes": [
          "fetch",
          "remote-notification"
        ]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/wallet.png",
        "backgroundColor": "#1e1e1e"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.anonymous.MyMoneyWallet"
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/wallet.png",
          "resizeMode": "contain",
          "backgroundColor": "#1e1e1e",
          "userInterfaceStyle": "automatic",
          "statusBar": {
            "translucent": true,
            "style": "light",
            "backgroundColor": "#1e1e1e"
          }
        }
      ],
      [
        "@react-native-community/datetimepicker",
        {
          "android": {
            "datePicker": {
              "colorAccent": {
                "light": "#FF5722"
              },
              "textColorPrimary": {
                "light": "#FF5722"
              }
            },
            "timePicker": {
              "background": {
                "light": "#FF5722",
                "dark": "#383838"
              },
              "numbersBackgroundColor": {
                "light": "#FF5722",
                "dark": "#383838"
              }
            }
          }
        }
      ],
      "expo-router"
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}